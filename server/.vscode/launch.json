    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "preLaunchTask": "npm: build",
            "env": {
                "NODE_ENV": "dev"
            },
            "program": "${workspaceFolder}/src/main.ts",
            "outFiles": ["${workspaceFolder}/js/**/*.js"],
            "skipFiles": [
                "<node_internals>/**"
